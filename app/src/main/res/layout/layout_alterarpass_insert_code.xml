<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="8dp"
    app:cardCornerRadius="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/orange_unitel"
            android:text="Esqueceu a senha?"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold" />



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img"
                        android:src="@drawable/img_insertcode"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="center"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange_unitel"
                        android:gravity="center"
                        android:text="Código de redefinição enviado para"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        />




                    <TextView
                        android:id="@+id/txt_EmailTelefone_Result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:textColor="@color/blue_unitel"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:lines="2"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:background="@drawable/box_border">

                            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                                android:id="@+id/dialog_EditConfirmCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Código de redefinição"
                                android:textColor="@color/blue_unitel"
                                android:maxLines="1"
                                android:maxLength="6"
                                android:inputType="number"
                                android:background="@android:color/transparent"
                                android:padding="15dp"
                                android:drawableStart="@drawable/ic_baseline_phonelink_lock_24"
                                android:drawableLeft="@drawable/ic_baseline_phonelink_lock_24"
                                android:drawableTint="@color/orange_unitel"
                                app:tint_color="@color/orange_unitel"
                                android:drawablePadding="15dp"
                                />




                        </RelativeLayout>





                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/dialog_btn_cancelar_InsertCode"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="@string/cancelar"
                            android:textColor="@color/white"
                            android:background="@drawable/button_background_grey"
                            android:layout_height="44dp"
                            android:layout_marginEnd="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"/>

                        <Button
                            android:id="@+id/dialog_btn_confirmar_InsertCode"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Confirmar"
                            android:textColor="@color/white"
                            android:background="@drawable/button_background"
                            android:layout_height="44dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


        </androidx.core.widget.NestedScrollView>







    </LinearLayout>


</androidx.cardview.widget.CardView>
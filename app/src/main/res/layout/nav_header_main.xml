<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/side_nav_bar_bk"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
<!--    android:gravity="bottom"-->
<!--    android:layout_height="@dimen/nav_header_height"-->
<!--    android:background="@drawable/side_nav_bar"-->
    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@color/orange_unitel"
            android:layout_gravity="center"

            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUserPhoto"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:contentDescription="@string/nav_header_desc"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:civ_border_color="@color/orange_unitel"
            app:civ_border_width="3dp"

            />

        <TextView
            android:id="@+id/txtUserNameInitial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:gravity="center"
            android:maxLines="1"
            android:maxLength="1"
            android:visibility="visible"
            android:text="G"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="80sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Gilson Vicente"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/blue_unitel"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/txtUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gilsonvicente6@outlook.com"
        android:padding="5dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="@color/blue_unitel"
        android:maxLines="1"
        />
</LinearLayout>
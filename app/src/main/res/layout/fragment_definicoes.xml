<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.DefinicoesFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            >

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline_esquerda"
                app:layout_constraintGuide_begin="20dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline_direita"
                android:orientation="vertical"
                app:layout_constraintGuide_end="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />




            <LinearLayout
                android:id="@+id/linearDef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp"
                android:background="@color/orange_unitel"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="19sp"
                    android:text="Segurança e login"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgPass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="img_lock_description"
                android:src="@drawable/ic_baseline_lock_24"
                app:tint="@color/orange_unitel"
                app:layout_constraintTop_toBottomOf="@+id/linearDef"
                app:layout_constraintStart_toEndOf="@+id/guideline_esquerda"
                app:layout_constraintTop_toTopOf="@+id/txtAlterarPass"
                app:layout_constraintBottom_toBottomOf="@+id/txtAlterarPass"
                />

            <TextView
                android:id="@+id/txtAlterarPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alterar senha"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/linearDef"
                app:layout_constraintStart_toEndOf="@+id/guideline_esquerda"
                app:layout_constraintEnd_toStartOf="@+id/guideline_direita"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:paddingStart="35dp"
                android:paddingLeft="35dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/orange_unitel"
                />

            <LinearLayout
                android:id="@+id/linearVisao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/txtAlterarPass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:background="@color/orange_unitel"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="19sp"
                    android:text="Visualização"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgList"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="img_list_description"
                android:src="@drawable/ic_baseline_list_24"
                app:tint="@color/orange_unitel"
                app:layout_constraintStart_toEndOf="@+id/guideline_esquerda"
                app:layout_constraintTop_toTopOf="@+id/txtModoList"
                app:layout_constraintBottom_toBottomOf="@+id/txtModoList"
                />

            <TextView
                android:id="@+id/txtModoList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Modo lista"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/linearVisao"
                app:layout_constraintStart_toEndOf="@+id/guideline_esquerda"
                app:layout_constraintEnd_toStartOf="@+id/guideline_direita"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:paddingStart="35dp"
                android:paddingLeft="35dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/orange_unitel"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchListMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearVisao"
                app:layout_constraintEnd_toStartOf="@+id/guideline_direita"
                app:layout_constraintTop_toTopOf="@+id/txtModoList"
                app:layout_constraintBottom_toBottomOf="@+id/txtModoList"
                android:theme="@style/SwitchCompatTheme"
                />

            <ImageView
                android:id="@+id/imgGrid"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="img_grid_description"
                android:src="@drawable/ic_baseline_grid_on_24"
                app:tint="@color/orange_unitel"
                app:layout_constraintStart_toEndOf="@+id/guideline_esquerda"
                app:layout_constraintTop_toTopOf="@+id/txtModoGrid"
                app:layout_constraintBottom_toBottomOf="@+id/txtModoGrid"
                />

            <TextView
                android:id="@+id/txtModoGrid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Modo grelha"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/txtModoList"
                app:layout_constraintStart_toEndOf="@+id/guideline_esquerda"
                app:layout_constraintEnd_toStartOf="@+id/guideline_direita"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:paddingStart="35dp"
                android:paddingLeft="35dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/orange_unitel"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchGridMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/switchListMode"
                app:layout_constraintEnd_toStartOf="@+id/guideline_direita"
                app:layout_constraintTop_toTopOf="@+id/txtModoGrid"
                app:layout_constraintBottom_toBottomOf="@+id/txtModoGrid"
                android:theme="@style/SwitchCompatTheme"/>





            <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:constraint_referenced_ids="switchGridMode,txtModoGrid,
                                            imgGrid,guideline_direita,switchListMode,
                                            txtModoList,imgList,
                                            guideline_esquerda,linearVisao,
                                            txtAlterarPass,imgPass,
                                            linearDef"
                tools:visibility="visible" android:visibility="visible"/>


            <LinearLayout
                android:id="@+id/linearSobre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/txtModoGrid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:background="@color/orange_unitel"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="19sp"
                    android:text="Sobre"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSobre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toEndOf="@+id/guideline_esquerda"
                app:layout_constraintTop_toBottomOf="@+id/linearSobre"
                app:layout_constraintEnd_toStartOf="@+id/guideline_direita"
                app:layout_constraintHorizontal_bias="0.0"/>



            <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:constraint_referenced_ids="linearSobre,recyclerViewSobre"
                android:visibility="visible" tools:visibility="visible"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
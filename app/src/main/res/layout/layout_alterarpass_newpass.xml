<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="8dp"
    app:cardCornerRadius="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/orange_unitel"
            android:text="Esqueceu a senha?"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold" />



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img"
                        android:src="@drawable/img_newpass"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="10dp"

                        />

                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:background="@drawable/box_border">

                        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                            android:id="@+id/dialog_EditPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:drawableStart="@drawable/ic_baseline_lock_24"
                            android:drawableLeft="@drawable/ic_baseline_lock_24"
                            android:drawablePadding="15dp"
                            android:drawableTint="@color/orange_unitel"
                            app:tint_color="@color/orange_unitel"
                            android:hint="@string/hint_password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:padding="15dp"
                            android:textColor="@color/blue_unitel"
                            />




                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:background="@drawable/box_border">

                        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                            android:id="@+id/dialog_editConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:drawableStart="@drawable/ic_baseline_lock_24"
                            android:drawableLeft="@drawable/ic_baseline_lock_24"
                            android:drawablePadding="15dp"
                            android:drawableTint="@color/orange_unitel"
                            app:tint_color="@color/orange_unitel"
                            android:hint="@string/hint_confirm_password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:padding="15dp"
                            android:textColor="@color/blue_unitel"
                            />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/dialog_btn_cancelar_NewPass"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="@string/cancelar"
                            android:textColor="@color/white"
                            android:background="@drawable/button_background_grey"
                            android:layout_height="44dp"
                            android:layout_marginEnd="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"/>

                        <Button
                            android:id="@+id/dialog_btn_enviar_NewPass"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Enviar"
                            android:textColor="@color/white"
                            android:background="@drawable/button_background"
                            android:layout_height="44dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


        </androidx.core.widget.NestedScrollView>







    </LinearLayout>


</androidx.cardview.widget.CardView>